#include <stdio.h>
#include <stdlib.h>

//Од стандарден влез се чита позитивен број n кој ги дава димензиите на квадратна матрица од цели броеви, која се чита во продолжение.
//Да се напише програма за таа матрица(макс. 100х100) ќе ја испечати должината на најдолгата строго растечка подниза, доколку ја гледаме ред по ред.

int main(){
    int a[max][max],n,naj=0,br=0,i,j;
    scanf("%d",&n);
    for(int i=0;i<n;i++){
        for(int j=0;j<n;j++){
            scanf("%d",&a[i][j]);
        }
    }
    for(i=0;i<n;i++){
        for(j=0;j<n;j++){
            if(a[i][j]<a[i][j+1]){
                br++;
            }
        }
        if(naj<br){
            naj=br;
        }
        br=0;
    }
    printf("%d",naj+1);

    return 0;
}

