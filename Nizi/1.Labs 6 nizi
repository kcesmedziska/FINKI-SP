#include <stdio.h>
#include <stdlib.h>
#define max 100

int main()
{
    int n[max],i,N;
    scanf("%d", &N);
    for(i=0;i<N;i++){
        scanf("%d", &n[i]);
        if(n[i]%2==0)
            n[i]=n[i]+1;
        else
            n[i]=n[i]-1;
    }

    for(i=0;i<N;i++)
        printf("%d ", n[i]);


    return 0;
}
