#include <stdio.h>
#include <stdlib.h>

int prost_br(int n){
    int i;
    for(i=2;i<n;i++){
        if(n%i==0)
            return 0;
    }
    return 1;
}
int pogolem_prost(int n){
    n=n+1;
    while(prost_br(n)==0)
        ++n;
    return n;
}

int main()
{
    int n,razlika=0;
    scanf("%d", &n);
    razlika=pogolem_prost(n)-n;
    printf("%d - %d = %d", pogolem_prost(n), n,razlika);


    return 0;
}
