#include <stdio.h>
#include <stdlib.h>
#define max 100

//Од стандарден влез да се вчита број N и потоа да се вчитаат N елементи во една низа. Внесената низа да се трансформира на начин што парните броеви ќе се зголемат за 1,
//а непарните ќе се намалат за 1. Трансформираната низа да се испечати така што елементите ќе се одвоени со празно место.

int main()
{
    int n[max],i,N;
    scanf("%d", &N);
    for(i=0;i<N;i++){
        scanf("%d", &n[i]);
        if(n[i]%2==0)
            n[i]=n[i]+1;
        else
            n[i]=n[i]-1;
    }

    for(i=0;i<N;i++)
        printf("%d ", n[i]);


    return 0;
}
